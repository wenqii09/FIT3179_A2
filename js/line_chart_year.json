{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Crime cases over Years",
  "background": "transparent",
  "data": {
    "url": "https://raw.githubusercontent.com/wenqii09/FIT3179_A2/main/data/trend.csv"
  },
  "width": 405,
  "height": 250,
  "transform": [
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "sexual_violence",
          "as": "Total Cases (per population)"
        }
      ],
      "groupby": ["date"]
    }
  ],
  "layer":[
  {"mark": {"type": "line", "point": true, "tooltip": true}}, 
        
    {
      "mark": {
            "type": "text",
            "align": "left",
            "dx": -10,
            "dy": 125,
            "text": "There is an obvious increasing",
            "fontSize": 9.5
          },
      "encoding": {
        "color": {"value": "grey"},
        "opacity":{
          "condition": {"test": "datum['date'] == 2006", "value": 1},
          "value": 0
        }
      }
    }, 
    {
      "mark": {
            "type": "text",
            "align": "left",
            "dx": -10,
            "dy": 137,
            "text": "trend since 2003 until 2007 and",
            "fontSize": 9.5
          },
      "encoding": {
        "color": {"value": "grey"},
        "opacity":{
          "condition": {"test": "datum['date'] == 2006", "value": 1},
          "value": 0
        }
      }
    }, 
    {
      "mark": {
            "type": "text",
            "align": "left",
            "dx": -10,
            "dy": 149,
            "text": "only a slight changes from 2007 to",
            "fontSize": 9.5
          },
      "encoding": {
        "color": {"value": "grey"},
        "opacity":{
          "condition": {"test": "datum['date'] == 2006", "value": 1},
          "value": 0
        }
      }
    },
    {
      "mark": {
            "type": "text",
            "align": "left",
            "dx": -10,
            "dy": 162,
            "text": "2010 decreases from 2010 to 2011",
            "fontSize": 9.5
          },
      "encoding": {
        "color": {"value": "grey"},
        "opacity":{
          "condition": {"test": "datum['date'] == 2006", "value": 1},
          "value": 0
        }
      }
    },
    {
      "mark": {
            "type": "text",
            "align": "left",
            "dx": 10,
            "dy": 2,
            "text": "2003",
            "fontSize": 9
          },
      "encoding": {
        "color": {"value": "black"},
        "opacity":{
          "condition": {"test": "datum['date'] == 2003", "value": 1},
          "value": 0
        }
      }
    }, 
    {
      "mark": {
            "type": "text",
            "align": "left",
            "dx": -160,
            "dy": -15,
            "text": "2007",
            "fontSize": 9
          },
      "encoding": {
        "color": {"value": "black"},
        "opacity":{
          "condition": {"test": "datum['date'] == 2010", "value": 1},
          "value": 0
        }
      }
    },  
    {
      "mark": {
            "type": "text",
            "align": "left",
            "dx": 10,
            "dy": -4,
            "text": "2010",
            "fontSize": 9
          },
      "encoding": {
        "color": {"value": "black"},
        "opacity":{
          "condition": {"test": "datum['date'] == 2010", "value": 1},
          "value": 0
        }
      }
    }, 
    {
      "mark": {
            "type": "text",
            "align": "left",
            "dx": -6,
            "dy": 7,
            "text": "2011",
            "fontSize": 9
          },
      "encoding": {
        "color": {"value": "black"},
        "opacity":{
          "condition": {"test": "datum['date'] == 2011", "value": 1},
          "value": 0
        }
      }
    }
        ],
  "encoding": {
    
    "x": {"field": "date", "axis": {"title": "Year", "labelAngle": 0}, "title": "Year"},
    "y": {
      "field": "Total Cases (per population)",
      "type": "quantitative",
      "title": "Total Cases (per 10,000 population)",
      "axis": {"grid": false}
    }
  },
  "config": {"axisY": {
      "minExtent": 80
    }}
}
