{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Global Crime Rate per 10,000 Population (2003-2011)",
  "width": 700,
  "height": 450,
  "projection": {"type": "equirectangular"},
  "params": [
    {
      "name": "Crime_Rate",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 1300,
        "step": 100,
        "name": "Minimum Crime Rate: "
      }
    },
    {
      "name": "Country_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Albania",
          "Australia",
          "Brazil",
          "Canada",
          "China",
          "Malaysia",
          "Mexico",
          "New Zealand",
          "Russia",
          "Sweden",
          "Uganda"
        ],
        "labels": [
          "Show All",
          "Albania",
          "Australia",
          "Brazil",
          "Canada",
          "China",
          "Malaysia",
          "Mexico",
          "New Zealand",
          "Russia",
          "Sweden",
          "Uganda"
        ],
        "name": "Country Selection: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/wenqii09/FIT3179_A2/main/js/ne_110m_admin_0_countries.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/wenqii09/FIT3179_A2/main/js/output.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/wenqii09/FIT3179_A2/main/data/rating.csv"
            },
            "key": "Country",
            "fields": ["Value"]
          }
        },
        {"filter": "datum.Value > Crime_Rate"},
        {
          "filter": "Country_selection == null || datum.properties.NAME == Country_selection"
        }
      ],
      "layer": [
        {
          "mark": {"type": "geoshape", "stroke": "white"},
          "encoding": {
            "color": {
              "field": "Value",
              "type": "quantitative",
              "title": "Crime Rate per 10,000 Population ",
              "scale": {
                "type": "threshold",
                "domain": [100, 300, 700, 1000],
                "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
              }
            },
            "tooltip": [
              {
                "field": "properties.NAME",
                "type": "nominal",
                "title": "Country"
              },
              {
                "field": "Value",
                "type": "quantitative",
                "title": "Crime Rate",
                "format": ".2f"
              }
            ]
          }
        }
      ]
    }, 
    {
      "data": {"values": [{}]},
      "encoding": {"latitude": {"datum": 0}, "longitude": {"datum": -160}},
      "layer": [
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "top",
            "dx": -20,
            "dy": 65,
            "x": "width",
            "text": "Grey",
            "color": "#999999",
            "fontSize": 14,
            "fontStyle": "bold"
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "top",
            "dx": 17,
            "dy": 65,
            "x": "width",
            "text": "coloured countries ",
            "fontSize": 14,
            "fontStyle": "bold"
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "top",
            "dx": -20,
            "dy": 82,
            "x": "width",
            "text": "have no data due to ",
            "fontSize": 14,
            "fontStyle": "bold"
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "top",
            "dx": -20,
            "dy": 99,
            "x": "width",
            "text": "dataset limitations.",
            "fontSize": 14,
            "fontStyle": "bold"
          }
        }, 
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "top",
            "dx": 704,
            "dy": 92,
            "x": "width",
            "text": "Australia",
            "fontSize": 10
          }
        }, 
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "top",
            "dx": 395,
            "dy": -171,
            "x": "width",
            "text": "Sweden",
            "fontSize": 10
          }
        }, 
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "top",
            "dx": 20,
            "dy": -110,
            "x": "width",
            "text": "United States",
            "fontSize": 10
          }
        }, 
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "top",
            "dx": 20,
            "dy": -98,
            "x": "width",
            "text": "of America",
            "fontSize": 10
          }
        }, 
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "top",
            "dx": 697,
            "dy": -200,
            "x": "width",
            "text": "Russia",
            "fontSize": 10
          }
        }
      ]
    }
  ],
  "config": {}
}
