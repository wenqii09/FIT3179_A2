  "mark": { "type": "bar", "tooltip": true},
  "encoding": {
    "y": {"field": "Country", "sort": "-x"},
    "x": {"aggregate": "sum", "field": "rate",
     "title": "Crime Rate",
     "axis": {"grid": false}}
  },
  "config": {}
}
