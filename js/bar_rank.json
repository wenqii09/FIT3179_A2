{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Global Crime Rate Rank over Years",
  "width": 450,
  "height": {"step": 17},
  "data": {
    "url": "https://raw.githubusercontent.com/wenqii09/FIT3179_A2/main/data/trend.csv"
