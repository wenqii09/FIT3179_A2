{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "A bar chart that sorts the y-values by the x-values.",
  
  "data": {"url": "https://raw.githubusercontent.com/wenqii09/FIT3179_A2/main/data/trend.csv"},
  "height": {"step": 17},
  "mark": "bar",

  "transform": [
    {
      "aggregate": [{
       "op": "sum",
       "field": "sexual.violence",
       "as": "values"
      }],
      "groupby": ["country.territory"]
    }
  ],

  "encoding": {
    "y": {
      "field": "country",
      "type": "ordinal",
      "sort": "-x"
    },
    "x": {
      "aggregate": "sum",
      "field": "sexual.violence",
      "title": "total"
    }
  }
}
--------------------------------------------
{
  "data": { "url": "https://raw.githubusercontent.com/wenqii09/FIT3179_A2/main/trend.csv" },

  "transform": [
    {
      "aggregate": [{
       "op": "sum",
       "field": "sexual.violence",
       "as": "mean values"
      }],
      "groupby": ["country.territory"]
    }
  ],

  "mark": "bar",

  "encoding": {
    "y": { "field": "country.territory", 
    "type": "ordinal", "title": "country",
    "sort": "-x"},

    "x": { "field": "mean values", 
    "type": "quantitative" }
  }
}
--------------------------------
{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Global Crime Rate (2003-2011)",
  "width": 800,
  "height": 500,
  "projection": {"type": "equirectangular"},
  "params": [
    {
      "name": "Crime_Rate",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 1300,
        "step": 100,
        "name": "Minimum Crime Rate: "
      }
    },
    {
      "name": "Country_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Albania",
          "Australia",
          "Brazil",
          "Canada",
          "China",
          "Malaysia",
          "Mexico",
          "New Zealand",
          "Russia",
          "Sweden",
          "Uganda"
        ],
        "labels": [
          "Show All",
          "Albania",
          "Australia",
          "Brazil",
          "Canada",
          "China",
          "Malaysia",
          "Mexico",
          "New Zealand",
          "Russia",
          "Sweden",
          "Uganda"
        ],
        "name": "Country Selection: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/wenqii09/FIT3179_A2/main/js/ne_110m_admin_0_countries.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/wenqii09/FIT3179_A2/main/js/output.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/wenqii09/FIT3179_A2/main/data/rating.csv"
            },
            "key": "Country",
            "fields": ["Value"]
          }
        },
        {"filter": "datum.Value > Crime_Rate"},
        {
          "filter": "Country_selection == null || datum.properties.NAME == Country_selection"
        }
      ],
      "layer": [
        {
          "mark": {"type": "geoshape"},
          "encoding": {
            "color": {
              "field": "Value",
              "type": "quantitative",
              "title": "Crime Rate",
              "scale": {
                "type": "threshold",
                "domain": [100, 300, 700, 1000],
                "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
              }
            },
            "tooltip": [
              {
                "field": "properties.NAME",
                "type": "nominal",
                "title": "Country"
              },
              {"field": "Value", "type": "quantitative", "title": "Crime Rate"}
            ]
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "right",
            "baseline": "middle",
            "dx": -12,
            "fontSize": 11.5,
            "fontStyle": "italic"
          },
          "encoding": {
            "text": {
              "field": "properties.NAME",
              "type": "nominal",
              "title": "Country"
            },
            "opacity": {
              "condition": {
                "test": "datum.properties.NAME == 'Australia' ",
                "value": 1
              },
              "value": 0
            },
            "tooltip": [
              {
                "field": "properties.NAME",
                "type": "nominal",
                "title": "Country"
              },
              {"field": "Value", "type": "quantitative", "title": "Crime Rate"}
            ]
          }
        }
      ]
    }
  ],
