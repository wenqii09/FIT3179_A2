# country bar graph rank crime index 
{
 "data": {"url": "https://raw.githubusercontent.com/wenqii09/FIT3179_A2/main/Crime%20index%20by%20countries%202020.csv"},
  "mark": "bar",
  "encoding": {
    "y": {"field": "Country",
            "type": "ordinal", 
            "sort": "-x"},
    "x": {"field": "Crime Index",
        "type": "quantitative"
        }
  }
}
--------------------
{
  "data": { "url": "https://raw.githubusercontent.com/wenqii09/FIT3179_A2/main/trend.csv" },

  "transform": [
    {
      "aggregate": [{
       "op": "mean",
       "field": "rate",
       "as": "mean crime rate"
      }],
      "groupby": ["country.territory"]
    }
  ],

  "mark": "bar",

  "encoding": {
    "y": { "field": "country.territory", 
    "type": "ordinal", "title": "country",
    "sort": "-x"},

    "x": { "field": "mean crime rate", 
    "type": "quantitative" }
  }
}



# line graph - trend
{
  "data": { "url": "https://raw.githubusercontent.com/wenqii09/FIT3179_A2/main/trend.csv" },
  "transform": [
    {
      "aggregate": [{
       "op": "sum",
       "field": "sexual.violence",
       "as": "total cases"
      }],
      "groupby": ["date"]
    }
  ],
  "mark": "line",
  "encoding": {
    "x": { "field": "date"},
    "y": { "field": "total cases", "type": "quantitative" }
  }
}

